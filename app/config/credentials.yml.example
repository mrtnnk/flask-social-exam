
DEVELOPMENT:
  SOCIAL_TWITTER:
    oauth:
      consumer_key: 'dev consumer key'
      consumer_secret: 'dev consumer secret'
    
  SOCIAL_FACEBOOK:
    oauth:
      consumer_key: 'dev app id'
      consumer_secret: 'dev app secret'
      request_token_params:
        scope: 'email,publish_stream'

PRODUCTION:
