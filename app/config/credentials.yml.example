  SOCIAL_TWITTER:
    oauth:
      consumer_key: 'production consumer key'
      consumer_secret: 'production consumer secret'
    
  SOCIAL_FACEBOOK:
    oauth:
      consumer_key: 'production app id'
      consumer_secret: 'production app secret'
      request_token_params:
        scope: 'email,publish_stream'